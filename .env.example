# ============================================
# Rooted Voices Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# cp .env.example .env

# ============================================
# SERVER CONFIGURATION
# ============================================
# Port the server will run on
PORT=5000

# Node environment (development, production, test)
NODE_ENV=development

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB connection string
# Local: mongodb://localhost:27017/rooted_voices
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/rooted_voices
MONGODB_URI=mongodb://localhost:27017/rooted_voices

# ============================================
# JWT AUTHENTICATION
# ============================================
# Secret key for JWT access tokens (REQUIRED - use a strong random string)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# Secret key for JWT refresh tokens (REQUIRED - use a different strong random string)
# Generate with: openssl rand -base64 32
JWT_REFRESH_SECRET=your_refresh_token_secret_change_in_production

# Access token expiration (default: 7d)
JWT_EXPIRE=7d

# Refresh token expiration (default: 30d)
JWT_REFRESH_EXPIRE=30d

# ============================================
# PASSWORD HASHING
# ============================================
# Bcrypt salt rounds (default: 10, recommended: 10-12)
BCRYPT_ROUNDS=10

# ============================================
# CORS & FRONTEND CONFIGURATION
# ============================================
# Frontend URL for CORS (REQUIRED)
FRONTEND_URL=http://localhost:3000

# Admin panel URL for CORS (optional)
ADMIN_PANEL_URL=http://localhost:5173

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
# Maximum file size in bytes (default: 10MB = 10485760)
MAX_FILE_SIZE=10485760

# ============================================
# RATE LIMITING
# ============================================
# Rate limit window in minutes (default: 15)
RATE_LIMIT_WINDOW=15

# Maximum requests per window (default: 100)
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
# SMTP server host (e.g., smtp.gmail.com, smtp.sendgrid.net)
SMTP_HOST=smtp.gmail.com

# SMTP server port (587 for TLS, 465 for SSL)
SMTP_PORT=587

# SMTP username/email
SMTP_USER=your_email@gmail.com

# SMTP password or app password
SMTP_PASS=your_email_password_or_app_password

# Email sender name
FROM_NAME=Rooted Voices

# Email sender address
FROM_EMAIL=noreply@rootedvoices.com

# ============================================
# SMS CONFIGURATION (Twilio)
# ============================================
# Twilio Account SID (optional - for SMS reminders)
TWILIO_ACCOUNT_SID=your_twilio_account_sid

# Twilio Auth Token (optional - for SMS reminders)
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Twilio phone number (optional - for SMS reminders)
# Format: +1234567890
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# PUSH NOTIFICATIONS (Web Push)
# ============================================
# VAPID public key (optional - for push notifications)
# Generate with: npm install -g web-push && web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your_vapid_public_key

# VAPID private key (optional - for push notifications)
VAPID_PRIVATE_KEY=your_vapid_private_key

# VAPID subject (optional - email or URL)
VAPID_SUBJECT=mailto:admin@rootedvoices.com

# ============================================
# STRIPE PAYMENT CONFIGURATION
# ============================================
# Stripe secret key (REQUIRED for payments)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Stripe publishable key (REQUIRED for payments)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Stripe webhook secret (REQUIRED for webhook verification)
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# AI SERVICES CONFIGURATION
# ============================================

# Google Gemini API Key (optional - for translation and AI features)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key

# Gemini model name (optional - defaults to gemini-1.5-flash)
# Options: gemini-1.5-flash-latest, gemini-1.5-flash-002, gemini-1.5-pro-latest, gemini-2.0-flash, gemini-2.5-flash, gemini-2.5-pro
GEMINI_MODEL=gemini-1.5-flash-latest

# OpenAI API Key (optional - for SOAP notes, document analysis, resource search)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key

# ============================================
# VIDEO CONFERENCING (Jitsi)
# ============================================
# Jitsi server URL (default: https://meet.jit.si)
# Use your own Jitsi instance or the public one
JITSI_SERVER_URL=https://meet.jit.si

# ============================================
# OCR CONFIGURATION
# ============================================
# Use cloud OCR service instead of local Tesseract (true/false)
# Default: false (uses local Tesseract.js)
USE_CLOUD_OCR=false

# ============================================
# SESSION REMINDERS
# ============================================
# Enable automated session reminders (true/false)
# Default: true (enabled)
ENABLE_SESSION_REMINDERS=true

# ============================================
# NOTES
# ============================================
# 1. Never commit the .env file to version control
# 2. Generate strong secrets for JWT_SECRET and JWT_REFRESH_SECRET
# 3. For production, use environment-specific values
# 4. Optional services (Email, SMS, Push, AI) can be left empty if not needed
# 5. Stripe keys are required if payment features are enabled
# 6. GEMINI_API_KEY is recommended for translation features
# 7. OPENAI_API_KEY is optional but enables AI-powered features
